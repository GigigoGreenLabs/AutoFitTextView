<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="piter.pitertest.com.piterapp.MainActivity"
    tools:showIn="@layout/activity_main"
    >

  <views.gigigo.com.textviewautofit.TextFitTextView
      android:id="@+id/AutoFitTxt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/loremfistrumshort"
      android:textSize="37sp"

      android:visibility="visible"
      />
  <!--android:background="#fff"-->
  <RelativeLayout
      android:id="@+id/lytTelon"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#fff"
      android:visibility="gone"
      ></RelativeLayout>
  <!-- android:textSize="184px"-->

  <ImageView
      android:id="@+id/imgAnim"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="12dp"
      android:src="@drawable/combined_shape"
      android:visibility="gone"
      />
  <!--android:textSize="136px"-->

  <piter.pitertest.com.piterapp.MoreContentArrowView
      android:id="@+id/imgAnim2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="250px"
      android:src="@drawable/combined_shape"
      android:visibility="gone"
      />

  <ImageView
      android:id="@+id/imgAnimList"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_alignEnd="@+id/imgAnim2"
      android:layout_alignRight="@+id/imgAnim2"
      android:layout_marginBottom="12dp"
      android:visibility="gone"
      />


  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      >
    <ImageView
        android:id="@+id/img1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="-4dp"
        android:alpha="0"
        android:src="@drawable/arrowmove60"
        />
    <ImageView
        android:id="@+id/img2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/img1"
        android:layout_marginBottom="-4dp"
        android:alpha="0"
        android:src="@drawable/arrowmove80"
        />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/img2"
        android:layout_marginBottom="-4dp"
        android:src="@drawable/arrowmove1"
        />

  </RelativeLayout>

  <!---->
</RelativeLayout>
